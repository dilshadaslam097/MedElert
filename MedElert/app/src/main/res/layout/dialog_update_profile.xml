<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="20dp">

    <!-- CNIC Input -->
    <TextView
        android:id="@+id/cnic_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="CNIC as username"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cnic_tv" />

    <TextView
        android:id="@+id/getUserCNIC"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/tab_shape"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cnic_tv" />

    <!-- Full Name Label -->
    <TextView
        android:id="@+id/fullName_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getUserCNIC" />

    <!-- Full Name Input -->
    <EditText
        android:id="@+id/updateName"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:background="@drawable/tab_shape"
        android:layout_marginTop="1dp"
        android:drawableLeft="@drawable/name_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:gravity="center_vertical|start"
        android:hint="Full Name"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fullName_tv" />

    <!-- Age Label -->
    <TextView
        android:id="@+id/age_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateName" />

    <!-- Age Input -->
    <EditText
        android:id="@+id/updateAge"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/tab_shape"
        android:drawableLeft="@drawable/dob_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:gravity="center_vertical|start"
        android:hint="Age"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/age_tv" />

    <!-- Disease Label -->
    <TextView
        android:id="@+id/disease_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Disease"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateAge" />

    <!-- Disease Input -->
    <EditText
        android:id="@+id/updateDisease"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/tab_shape"
        android:drawableLeft="@drawable/disease_icon"
        android:drawablePadding="5dp"
        android:ems="10"
        android:gravity="center_vertical|start"
        android:hint="Disease"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disease_tv" />

    <!-- Update Button -->
    <Button
        android:id="@+id/updateButton"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tab_shape"
        android:clickable="true"
        android:gravity="center"
        android:text="UPDATE"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateDisease" />

</androidx.constraintlayout.widget.ConstraintLayout>
